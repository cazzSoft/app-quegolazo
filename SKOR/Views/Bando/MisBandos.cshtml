        <div class="col-100">
            <label>Código:</label>
            <input type="text" id="txtCodigoBando" name="txtCodigoBando" value="" class="form_input" />
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-100 centrado">
            <span class="button-wrap">
                <a href="#" class="button button-pill external">Unirse</a>
            </span>
        </div>
    </div>
    <br /> <br />*@

    <h5>Crea un Equipo</h5>
    <div class="row">
        <div class="col-100">
            <label>Nombre:</label>
            <input type="text" id="txtBandoNombre" name="txtBandoNombre" value="" class="form_input" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-100 centrado">
            <span class="button-wrap">
                <a id="btnCreaBando" href="#" class="button button-pill external">Crear</a>
            </span>
        </div>
    </div>

</div>

<input type="hidden" id="txtNombreBando" value="@ViewBag.nombreBando" />

